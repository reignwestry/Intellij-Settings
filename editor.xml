      <option name="ERROR_STRIPE_COLOR" value="977ab" />
    </pattern>
    <pattern useCustomColors="true" pattern="\bfixme\b.*">
      <option name="FOREGROUND" value="ff6a00" />
      <option name="BACKGROUND" value="a80200" />
      <option name="FONT_TYPE" value="2" />
      <option name="ERROR_STRIPE_COLOR" value="977ab" />
    </pattern>
    <pattern useCustomColors="true" pattern="\bidea\b.*">
      <option name="FOREGROUND" value="a8c023" />
      <option name="BACKGROUND" value="10441" />
      <option name="FONT_TYPE" value="2" />
